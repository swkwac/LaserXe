---
import Layout from "../../layouts/Layout.astro";
import UploadImageForm from "../../components/upload/UploadImageForm";
---

<Layout title="Dodaj obraz – LaserXe">
  <main class="min-h-full px-4 py-6" role="main">
    <header class="mb-6 border-b border-border pb-4">
      <a
        href="/images"
        class="text-sm text-muted-foreground hover:text-foreground underline-offset-4 hover:underline"
      >
        ← Powrót do listy
      </a>
      <h1 class="mt-2 text-xl font-semibold tracking-tight">Dodaj obraz</h1>
    </header>
    <div class="max-w-md">
      <UploadImageForm client:load redirectToDetail={true} />
    </div>
  </main>
</Layout>
